<SwapChainBackgroundPanel
    x:Class="Project2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    d:DesignWidth="1280"
    d:DesignHeight="800">
    <Grid x:Name="sgrid" VerticalAlignment="Top" Height="800">
        <Grid.Background>
            <ImageBrush ImageSource="Content/GolfImage.jpg"/>
        </Grid.Background>
        <Button x:Name="bstart_practise" Content="Practise" HorizontalAlignment="Left" Margin="875,319,0,0" VerticalAlignment="Top" Height="99" Width="269" Click="bstart_practise_Click" Background="Black" AllowDrop="True"/>
        <Button x:Name="bcontrol" Content="Control" HorizontalAlignment="Left" Margin="875,451,0,0" VerticalAlignment="Top" Height="99" Width="269" Click="About" Background="Black"/>
        <Button x:Name="babout" Content="About" HorizontalAlignment="Left" Margin="875,588,0,0" VerticalAlignment="Top" Height="99" Width="269" Click="About" Background="Black"/>
        <Button x:Name="abutton" Content="ABOUT TTTTTTTTTTTTTTTTTTTTTTTTTAAAAAAAAAAAAAAAAAAAAAAAAAAZZZZZZZZZZZZZZZZZZZZZZZZZZZZ" HorizontalAlignment="Left" Margin="406,319,0,0" VerticalAlignment="Top" Height="231" Width="361" BorderBrush="#FFE61A1A" Click="hideAbout" Visibility="Collapsed">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFAF0BEC" Offset="0.741"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="bstart" Content="Start Game" HorizontalAlignment="Left" Margin="875,187,0,0" VerticalAlignment="Top" Height="99" Width="269" Click="StartGame" Background="Black" AllowDrop="True"/>

    </Grid>
    <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="61" Margin="0,739,0,0" Stroke="Black" VerticalAlignment="Top" Width="2000" Visibility="Collapsed"/>
    <Slider x:Name="sldforce" LostFocus="sldforce_LostFocus" HorizontalAlignment="Left" Margin="15.962,699.575,0,0" Width="924.567" RenderTransformOrigin="0.5,0.5" Height="46.888" UseLayoutRounding="False" d:LayoutRounding="Auto" CacheMode="BitmapCache" FontFamily="Global User Interface" BorderBrush="#FF00AC4E" Background="#FF7E2020" ValueChanged="setForce" GotFocus="sldforce_GotFocus" BorderThickness="20" VerticalContentAlignment="Stretch" Visibility="Collapsed">
        <Slider.RenderTransform>
            <CompositeTransform Rotation="0.4" SkewY="-0.525" TranslateX="-13.298" TranslateY="11.477" SkewX="0.627"/>
        </Slider.RenderTransform>
    </Slider>
    <Button x:Name="btnhit" Content="HIT" HorizontalAlignment="Left" Margin="994.984,517.033,0,0"  Click="hit"   VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="108.711"  UseLayoutRounding="False" Width="190.089" d:LayoutRounding="Auto" Background="#FF09B84F" BorderBrush="#FF2B302D" Visibility="Collapsed" BorderThickness="10">
        <Button.RenderTransform>
            <CompositeTransform Rotation="-0.292"/>
        </Button.RenderTransform>
    </Button>
    <Popup x:Name="modebox" IsOpen="False" ManipulationMode="None" Margin="520,338,437,218">
        <StackPanel Background="#FFD67626" Height="212.99" Width="298" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" >
            <StackPanel.RenderTransform>
                <CompositeTransform Rotation="0.047"/>
            </StackPanel.RenderTransform>
            <TextBlock x:Name="txb_mode" TextAlignment="Center" TextWrapping="Wrap" FontSize="15" Height="36" Margin="0,0,-0.018,0"/>
            <Button x:Name="close_popup" Content="OK" Click="close_popup_Click" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom" UseLayoutRounding="True" HorizontalAlignment="Right" HorizontalContentAlignment="Right" ManipulationMode="All" RenderTransformOrigin="0.49,0.498" IsRightTapEnabled="False" Margin="0,20,10,20"/>
        </StackPanel>
    </Popup>
</SwapChainBackgroundPanel>
